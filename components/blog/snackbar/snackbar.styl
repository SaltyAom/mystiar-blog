#snackbar
    position fixed
    z-index 5
    bottom -52px
    right 2.5%
    display flex
    flex-direction row
    justify-content flex-start
    align-items center
    width 300px
    height 52px
    color #fff
    font-size 16px
    font-weight normal
    padding 0 16px
    background-color #333
    box-shadow 0 4px 8px rgba(0,0,0,.0875)
    border-radius 4px
    animation snackbar-in-out 4.5s ease-in-out 0s 1

    @keyframes snackbar-in-out
        0%
            bottom -52px

        10%
            bottom 32px

        90%
            bottom 32px

        100%
            bottom -52px

    @media screen and (max-width 568px)
        &
            width 90%
            left 5%