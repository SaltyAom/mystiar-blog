#blog-header
    display block
    width 100%
    margin 40px 0

    @media screen and (max-width 768px)
        margin-top 0

    & > .title
        font-size 40px
        font-weight 600
        margin 20px 0 0 0
        color var(--title)
        font-weight 500
        font-family 'Kanit'

    & > .written-by
        display block
        margin 4px 0
        font-size 16px
        font-weight 400
        color var(--content)

        & > .author
            display inline-block
            color var(--link)
            font-weight 500
            font-family 'Kanit'
            text-decoration none
            padding 1px 4px
            border-radius 4px

            &:hover,
            &:focus
                background-color var(--link-overlay)
                cursor pointer

    & > .figure
        display block
        width 100%
        margin 20px 0
        padding 0
        background-color var(--preload)
        border-radius 8px
        border-image-width 0
        overflow hidden

        & > .image
            display block
            width inherit
            border-radius inherit
            object-fit cover
            object-position center