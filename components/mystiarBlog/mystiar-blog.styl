    flex-direction row
    justify-content center
    align-items center
    margin 20px auto
    padding 20px
    text-decoration none

    & > .icon
        width 60px
        height 60px
        object-fit contain
        object-position center

    & > .title
        color var(--title)
        font-size 28px
        font-weight 700
        margin 0