.standalone-image
    display block
    width 100%
    margin 20px 0
    padding 0
    border 0
    border-radius 12px
    border-image-width 0

.standalone-overlay
    position fixed
    z-index 10
    top 0
    left 0
    display flex
    flex-direction column
    justify-content center
    align-items center
    width 100%
    height 100vh
    padding 40px
    background-color rgba(0,0,0,.5)

    & > .image
        display block
        max-width 100%
        max-height 100%
    
    @media screen and (max-width 768px)
        &
            padding 0

        & > .image
            border-radius 0