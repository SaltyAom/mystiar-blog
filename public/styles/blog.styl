#blog,
#recommended
    position relative
    width 640px
    margin 0 auto
    padding 20px 0
    color var(--title)

    @media screen and (max-width 767.9px)
        &
            width 100%
            padding 20px 5%

.h1,
.h2
    position relative
    display block
    font-size 36px
    font-weight 400
    margin 20px 0 0 0
    padding 8px 0
    font-weight 700
    overflow-x auto
    overflow-y hidden
    word-break break-word

.marker
    position absolute
    left -48px
    display block
    margin 32px 0 0 0
    width 6px
    height 6px
    opacity .75
    background-color var(--primary)
    border-radius 3px
    box-shadow 0 0 0 12px var(--primary-overlay)

    &.-h2
        margin-top 28px
        background-color var(--success)
        box-shadow 0 0 0 12px var(--success-overlay)

.h2
    font-size 28px

.p
    display block
    font-size 19px
    font-weight 400
    margin 24px 0
    line-height 1.75em
    word-break break-word

.a
    font-size 19px
    color var(--link)
    padding 2px 6px
    border-radius 4px
    text-decoration none

    &:hover,
    &:focus
        background-color var(--link-overlay)

.pre
    position relative

.p > code
    display inline
    color var(--success)
    padding 2px 4px
    font-weight 700
    border-radius 4px
    background-color var(--success-overlay)

.list
    font-size 19px
    color var(--title)
    line-height 1.85em

#recommended-title
    display block
    text-align left
    width 960px
    margin 0 auto
    padding 20px 20px 0 20px

    & > .title
        font-size 36px
        color var(--title)
        font-weight 700
        margin 0

    & > .detail
        font-size 18px
        color var(--content)
        font-weight 400
        margin 8px 0 0 0

#recommended
    display grid
    justify-content center
    grid-template-columns repeat(2, 50%)
    grid-gap 20px 40px
    width 960px - 40px
    margin 8px auto 20px auto
    padding 20px

#recommended,
#recommended-title
    @media screen and (min-width 768px) and (max-width 1023.9px)
        width 95%
        grid-gap 20px

    @media screen and (max-width 767.9px)
        width 100%
        grid-template-columns repeat(1, 100%)