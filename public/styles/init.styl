@import url('https://fonts.googleapis.com/css?family=Sarabun:400,700&display=swap')
@import url('https://fonts.googleapis.com/css?family=Kanit:500&display=swap')

:root
    --primary #006dff
    --primary-overlay rgba(0,123,255,.125)
    --success #1d8640
    --success-overlay rgba(76,217,100, .25)

    --title #333
    --content #757575

    --link #006dff
    --link-overlay rgba(0,123,255,.125)
    --code #f2f2f2
    --code-content #656565
    --preload #f9f9f9
    --background #fff

*
    font-family Sarabun, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
    box-sizing border-box

body
    margin 0
    background-color var(--background)

@media (prefers-color-scheme dark)
    :root
        --primary #009aff
        --primary-overlay rgba(0,123,255,.125)
        --success #43d072
        --success-overlay rgba(76,217,100, .25)

        --title #eee
        --content #aaa

        --link #009aff
        --link-overlay rgba(0,123,255,.125)
        --code #313131
        --code-content #ccc
        --preload #272727
        --background #212121