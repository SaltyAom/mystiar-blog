#under-construction
    width 100%
    height 100vh
    display flex
    flex-direction column
    justify-content center
    align-items center

    & > .figure
        display block
        width 256px
        height 256px
        border-radius 16px
        background-color var(--preload)

        & > .image
            width inherit
            height inherit
            border-radius inherit
            object-fit center
            object-position center

    & > .title
        display block
        color var(--content)
        font-size 36px